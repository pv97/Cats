<html>
  <body>
    <form action=<%= cat_rental_requests_url %> method="POST">
      <label for="cat select">Select a cat: </label>
      <select id="cat select" name="cat_rental_request[cat_id]">
        <% cats.each do |cat| %>
          <option value=<%= cat.id %> ><%= cat.name %></option>
        <% end %>
      </select>
      <label for="start date">Pick a start date: </label>
      <input type="date" name="cat_rental_request[start_date]" value=<%= Date.today %>>

      <label for="end date">Pick an end date: </label>
      <input type="date" name="cat_rental_request[end_date]" value=<%= Date.tomorrow %>>

      <input type="submit" value="book it">
    </form>
  </body>
</html>
